<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/common_bg" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout android:background="@drawable/bill_bg" android:paddingBottom="@dimen/dp30" android:layout_width="fill_parent" android:layout_height="wrap_content" android:stretchColumns="*">
        <TableRow android:layout_marginTop="@dimen/dp17">
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff8a8a8a" android:paddingLeft="@dimen/dp36" android:layout_width="@dimen/dp110" android:layout_height="wrap_content" android:text="@string/bill_merchant_name" />
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff333333" android:id="@id/txt_merchant_name" android:layout_width="@dimen/dp110" android:layout_height="wrap_content" android:singleLine="false" />
        </TableRow>
        <TableRow android:layout_marginTop="@dimen/dp16">
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff8a8a8a" android:paddingLeft="@dimen/dp36" android:layout_width="@dimen/dp110" android:layout_height="wrap_content" android:text="@string/bill_p1" />
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff333333" android:id="@id/txt_p1" android:layout_width="@dimen/dp110" android:layout_height="wrap_content" android:singleLine="true" />
        </TableRow>
        <TableRow android:layout_marginTop="@dimen/dp16">
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff8a8a8a" android:paddingLeft="@dimen/dp36" android:layout_width="@dimen/dp110" android:layout_height="wrap_content" android:text="@string/bill_p2" />
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff333333" android:id="@id/txt_p2" android:layout_width="@dimen/dp110" android:layout_height="wrap_content" android:singleLine="true" />
        </TableRow>
        <TableRow android:layout_marginTop="@dimen/dp17">
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff8a8a8a" android:paddingLeft="@dimen/dp36" android:layout_width="@dimen/dp110" android:layout_height="wrap_content" android:text="@string/bill_balance_before_load" />
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff333333" android:id="@id/txt_balance_old" android:layout_width="@dimen/dp110" android:layout_height="wrap_content" android:singleLine="true" />
        </TableRow>
        <TableRow android:layout_marginTop="@dimen/dp16">
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff8a8a8a" android:gravity="top" android:paddingLeft="@dimen/dp36" android:layout_width="@dimen/dp110" android:layout_height="wrap_content" android:text="@string/bill_balance_after_load" />
            <TextView android:textSize="@dimen/sp16" android:textColor="#ffee5757" android:gravity="center|left" android:id="@id/txt_balance_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" />
        </TableRow>
        <TableRow android:layout_marginTop="@dimen/dp16">
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff8a8a8a" android:gravity="top" android:paddingLeft="@dimen/dp36" android:layout_width="@dimen/dp110" android:layout_height="wrap_content" android:text="@string/common_country_code" />
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff333333" android:gravity="center|left" android:id="@id/txt_country_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" />
        </TableRow>
        <TableRow android:layout_marginTop="@dimen/dp16">
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff8a8a8a" android:gravity="top" android:paddingLeft="@dimen/dp36" android:layout_width="@dimen/dp110" android:layout_height="wrap_content" android:text="@string/bill_date" />
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff333333" android:gravity="center|left" android:id="@id/txt_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" />
        </TableRow>
        <TableRow android:layout_marginTop="@dimen/dp16">
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff8a8a8a" android:gravity="top" android:paddingLeft="@dimen/dp36" android:layout_width="@dimen/dp110" android:layout_height="wrap_content" android:text="@string/bill_act" />
            <TextView android:textSize="@dimen/sp16" android:textColor="#ff333333" android:gravity="center|left" android:id="@id/txt_act" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" />
        </TableRow>
    </TableLayout>
</LinearLayout>